<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a new campground</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds", method = "POST">
                <div class="form-group">
                    <input class="form-control", type="text", name="name", placeholder="name"></input>    
                </div>
                  <div class="form-group">
                    <input class="form-control", type="number", name="price", placeholder="price" min="0.01" step="0.01"></input>    
                </div>
                <div class="form-group">
                    <input class="form-control", type="text", name="img", placeholder="The URL of image"></input>    
                </div>
                <div class="form-group">
                    <input class="form-control", type="text", name="desc", placeholder="The description of the campground"></input>    
                </div>
                <div class="form-group">
                    <button type="submit", class="btn btn-primary btn-block">Submit it</button>    
                </div>
            </form> 
            <a href="/campgrounds">Go Back!</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>